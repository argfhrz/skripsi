<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LayoutController.MainActivity">

    <!--1-->
    <FrameLayout
        android:id="@+id/frameLayout_activity_main_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </FrameLayout>

    <!--3-->
    <TextView
        android:id="@+id/textView_activity_main_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="25dp"
        android:textSize="15pt"
        android:textColor="@color/primary_text"
        app:fontFamily="@font/trench"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/app_name" />

    <!--3-->
    <android.support.v7.widget.CardView
        android:id="@+id/cardView_activity_main_3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:cardElevation="5dp"
        app:cardCornerRadius="10dp"
        android:layout_width="100dp"
        android:layout_height="100dp" >

        <!--3_1-->
        <ProgressBar
            android:id="@+id/progressBar_activity_main_3_1"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>